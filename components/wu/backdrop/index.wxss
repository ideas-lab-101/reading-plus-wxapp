.wux-backdrop{
    background:rgba(0,0,0,.4)
}
.wux-backdrop,.wux-backdrop--transparent{
    position:fixed;
    z-index:1000;
    top:0;
    right:0;
    left:0;
    bottom:0
}
.wux-backdrop--transparent{
    background:0 0;
}
.wux-backdrop>._insert,.wux-backdrop--transparent>._insert{
    width: 100%;
    height: 100%;
}
