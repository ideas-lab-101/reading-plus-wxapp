/**
主色系列
 */
.color-primary{color: #52b981 !important;}
.color-assistant{color: #2f308c !important;}
.color-minor{color: #d3ebff !important;}

/**
主色背景系列
 */
.color-primary-back{background-color: #52b981 !important;}
.color-assistant-back{background-color: #2f308c !important;}
.color-minor-back{background-color: #d3ebff !important;}
.color-linear{background: linear-gradient(to right, #52b981, #2f308c);}

/**
边框颜色
 */
.color-primary-border{border-color: #52b981 !important;}
.color-assistant-border{border-color: #2f308c !important;}
.color-minor-border{border-color: #d3ebff !important;}
.color-gray-border{border-color: #f0f0f0 !important;}


/**
after before 颜色
 */
.color-primary-after::after, .color-primary-after::before{ border-color: #52b981 !important; color: #52b981 !important;background-color: #52b981 !important;}
.color-assistant-after::after, .color-assistant-after::before{border-color: #2f308c !important; color: #2f308c !important;background-color: #2f308c !important;}
.color-minor-after::after, .color-minor-after::before{border-color: #d3ebff !important; color: #d3ebff !important;background-color: #d3ebff !important;}

/**
辅助颜色
 */
.color-gray{color: #f0f0f0 !important;}
.color-neutral-gray{color: #d8d8d8 !important;}
.color-light-gray{color: #ebebeb !important;}

.color-green{color: #7ebc2d !important;}
.color-red{color: #ef5243 !important;}

.color-green-back{background-color: #7ebc2d !important;}
.color-red-back{background-color: #e54232 !important;}
.color-gray-back{background-color: #f0f0f0 !important;}
.color-light-gray-back{background-color: #f7f7f7 !important;}

.c333-color{ color: #333333;}
.c666-color{ color: #666666;}
.c999-color{ color: #999999;}



/**
button hover
 */
.basic-hover{
    background-color: rgba(0, 0, 0, 0.03) !important;
}
.primary-hover{
    background-color: #01723c !important;
}
.red-hover{
  background-color: #ee1f20 !important;
}
.assistant-hover{
    background-color: #2f308c !important;
}
.minor-hover{
    background-color: #d3ebff !important;
}



